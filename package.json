{
  "name": "nodejs-report",
  "version": "0.2.6",
  "description": "Node.js 印表機控制服務 - REST API + Web UI",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "pkg": "npm run build && pkg . --targets node20-win-x64 --output build/nodejs-report.exe",
    "pkg:run": "npm run pkg && cd build && nodejs-report.exe"
  },
  "pkg": {
    "scripts": ["dist/**/*.js"],
    "assets": [
      "public/**/*",
      "package.json",
      "node_modules/pdf-to-printer/dist/**/*",
      "node_modules/@foliojs-fork/linebreak/src/classes.trie",
      "node_modules/@foliojs-fork/fontkit/**/*.trie",
      "node_modules/@foliojs-fork/pdfkit/js/data/*.afm"
    ],
    "targets": ["node20-win-x64"],
    "outputPath": "build"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdf-to-printer": "^5.6.0",
    "pdfmake": "^0.2.15",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/pdfmake": "^0.2.9",
    "@types/uuid": "^10.0.0",
    "@yao-pkg/pkg": "^6.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
